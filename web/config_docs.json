{
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "analyzer": {
        "plain": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "underscores",
            "synonyms"
          ]
        },
        "stemmed": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "underscores",
            "synonyms",
            "asciifolding",
            "english"
          ]
        },
        "shingles": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "stop",
            "asciifolding",
            "english",
            "shingles"
          ]
        },
        "sections": {
          "tokenizer": "keyword",
          "filter": [
            "sections"
          ]
        }
      },
      "filter": {
        "english": {
          "type": "stemmer",
          "name": "english"
        },
        "shingles": {
          "type": "shingle",
          "output_unigrams": true,
          "min_shingle_size": 2,
          "max_shingle_size": 2
        },
        "sections": {
          "type": "pattern_capture",
          "preserve_original": true,
          "patterns": [
            "^([^/]+/)",
            "^([^/]+/[^/]+/)",
            "^([^/]+/[^/]+/[^/]+/)"
          ]
        },
        "underscores": {
          "type": "pattern_capture",
          "patterns": "(?:\\b|_|\\\\)(\\p{Alpha}+)(?:\\b||_|\\\\)"
        },
        "synonyms": {
          "type": "synonym",
          "synonyms": [
            "indices => indexes"
          ]
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "is_current": {
          "type": "boolean"
        },
        "url": {
          "type": "keyword"
        },
        "breadcrumbs": {
          "type": "keyword"
        },
        "published_at": {
          "type": "date",
          "format": "dateOptionalTime"
        },
        "title": {
          "type": "text",
          "analyzer": "plain",
          "fields": {
            "shingles": {
              "type": "text",
              "analyzer": "shingles"
            },
            "stemmed": {
              "type": "text",
              "analyzer": "stemmed"
            }
          }
        },
        "part_titles": {
          "type": "text",
          "analyzer": "plain",
          "fields": {
            "shingles": {
              "type": "text",
              "analyzer": "shingles"
            },
            "stemmed": {
              "type": "text",
              "analyzer": "stemmed"
            }
          }
        },
        "content": {
          "type": "text",
          "analyzer": "plain",
          "fields": {
            "shingles": {
              "type": "text",
              "analyzer": "shingles"
            },
            "stemmed": {
              "type": "text",
              "analyzer": "stemmed",
              "index_options": "offsets"
            }
          }
        },
        "part": {
          "type": "nested",
          "properties": {
            "id": {
              "type": "keyword"
            },
            "title": {
              "type": "text",
              "analyzer": "plain",
              "copy_to": "part_titles",
              "fields": {
                "shingles": {
                  "type": "text",
                  "analyzer": "shingles"
                },
                "stemmed": {
                  "type": "text",
                  "analyzer": "stemmed"
                }
              }
            },
            "content": {
              "type": "text",
              "analyzer": "plain",
              "copy_to": "content",
              "fields": {
                "shingles": {
                  "type": "text",
                  "analyzer": "shingles"
                },
                "stemmed": {
                  "type": "text",
                  "analyzer": "stemmed",
                  "index_options": "offsets"
                }
              }
            }
          }
        },
        "section": {
          "type": "text",
          "analyzer": "sections",
          "search_analyzer": "keyword",
          "fielddata": true
        },
        "tags": {
          "type": "keyword"
        }
      }
    }
  }
}
